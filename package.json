{
  "name": "takeabreak",
  "version": "1.0.0",
  "private": true,
  "description": "Premium corporate wellness platform",
  "author": "takeabreak.life",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "docker-compose up -d && pnpm --parallel dev",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "cd apps/api && source venv/bin/activate && python run.py",
    "build": "pnpm --filter web build",
    "start": "docker-compose up",
    "stop": "docker-compose down",
    "db:migrate": "cd apps/api && alembic upgrade head",
    "db:seed": "cd apps/api && python -m scripts.seed",
    "clean": "pnpm --parallel clean",
    "lint": "pnpm --parallel lint",
    "test": "pnpm --parallel test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.12.0"
}